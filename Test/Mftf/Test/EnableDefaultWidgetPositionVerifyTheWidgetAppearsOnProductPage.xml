<tests xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xsi:noNamespaceSchemaLocation="urn:magento:mftf:Test/etc/testSchema.xsd">
  <test name="EnableDefaultWidgetPositionVerifyTheWidgetAppearsOnProductPage">
    <annotations>
      <features value="Yotpo"/>
      <stories value="Enable show bottomline and verify that bottomline appear on product page" />
      <title value="Verify that bottomline appear on product page"/>
      <description value="Test that bottomline stars appear in the product page"/>
      <severity value="AVERAGE"/>
      <testCaseId value="MC-248"/>
      <group value="Yotpo"/>
    </annotations>

    <before>
      <actionGroup ref="LoginAsAdmin" stepKey="loginAsAdmin"/>
      <createData entity="SimpleProduct2" stepKey="createProduct"/>
    </before>
    <after>
      <actionGroup ref="LoginAsAdmin" stepKey="loginAsAdmin"/>
      <actionGroup ref="AdminNavigateMenuActionGroup" stepKey="navigateToStoresAllStoresPage">
        <argument name="menuUiId" value="{{AdminMenuStores.dataUiId}}"/>
        <argument name="submenuUiId" value="{{AdminMenuStoresSettingsConfiguration.dataUiId}}"/>
      </actionGroup>
      <actionGroup ref="AdminSwitchStoreViewActionGroup" stepKey="switchStoreViewEnglishProduct">
        <argument name="storeView" value="_defaultStore.name"/>
      </actionGroup>
      <actionGroup ref="DisableYotpoPlugin" stepKey="DisableYotpoPlugin"/>
      <amOnPage url="{{AdminLogoutPage.url}}" stepKey="amOnLogoutPage"/>
      <deleteData createDataKey="createProduct" stepKey="deleteProduct"/>
    </after>

    <actionGroup ref="AdminNavigateMenuActionGroup" stepKey="navigateToStoresAllStoresPage">
      <argument name="menuUiId" value="{{AdminMenuStores.dataUiId}}"/>
      <argument name="submenuUiId" value="{{AdminMenuStoresSettingsConfiguration.dataUiId}}"/>
    </actionGroup>

    <actionGroup ref="AdminSwitchStoreViewActionGroup" stepKey="switchStoreViewEnglishProduct">
      <argument name="storeView" value="_defaultStore.name"/>
    </actionGroup>

    <actionGroup ref="EnableYotpoPlugin" stepKey="enableYotpoPlugin">
      <argument name="storeView" value="_defaultStore.name"/>
    </actionGroup>

    <click selector="{{AdminLoginToYotpo.WidgetSettings}}" stepKey="clickOnWidgetSettings"/>
    <wait time="6" stepKey="waitSixSeconds"/>

    <uncheckOption selector="{{AdminLoginToYotpo.WidgetEnabledCheckBox}}" stepKey="ClickOnWidgetEnabledCheckBox"/>
    <selectOption userInput="Yes" selector="{{AdminLoginToYotpo.WidgetEnabled}}" stepKey="selectWidgetToBeEnabled"/>
    <click selector="{{AdminLoginToYotpo.SaveConfiguration}}" stepKey="ClickOnSaveConfig"/>
    <seeOptionIsSelected userInput="Yes" selector="{{AdminLoginToYotpo.WidgetEnabled}}" stepKey="seeWidgetEnabled"/>

    <actionGroup ref="OpenStoreFrontProductPageActionGroup" stepKey="openProductPage">
      <argument name="productUrlKey" value="$$createProduct.custom_attributes[url_key]$$"/>
    </actionGroup>

    <!-- navigate to the created product page -->
    <waitForPageLoad stepKey="waitForProductPageLoad"/>

    <!-- Check that bottomline stars appear in the page -->
    <seeElement selector="{{YotpoProductPageSection.MainWidget}}" stepKey="checkMainWidgetAppears"/>
  </test>
</tests>
