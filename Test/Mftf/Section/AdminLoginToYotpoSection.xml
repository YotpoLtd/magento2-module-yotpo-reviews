<sections xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
          xsi:noNamespaceSchemaLocation="urn:magento:mftf:Page/etc/SectionObject.xsd">
  <section name="AdminLoginToYotpo">
    <element name="YotpoIconInMenu" type="text" selector="#system_config_tabs > div:nth-child(6) > div"/>
    <element name="yotpoAppKey" type="text" selector="input#yotpo_settings_app_key"/>
    <element name="yotpoSecret" type="text" selector="input#yotpo_settings_secret"/>

    <element name="GeneralMenu" type="button" selector="#system_config_tabs > div:nth-child(1) > div"/>
    <element name="YotpoMenu" type="button" selector="#system_config_tabs > div:nth-child(6) > div"/>
    <element name="WidgetSettings" type="button" selector="//a[@id='yotpo_widget_settings-head']"/>
    <element name="YotpoEnabled" type="select" selector="//select[@id='yotpo_settings_active']" />
    <element name="WidgetEnabled" type="select" selector="//select[@id='yotpo_widget_settings_widget_enabled']"/>
    <element name="WidgetEnabledCheckBox" type="checkbox" selector="//input[@id='yotpo_widget_settings_widget_enabled_inherit']"/>
    <element name="HideMagentoReviews" type="select" selector="//select[@id='yotpo_widget_settings_mdr_enabled']"/>
    <element name="HideMagentoReviewsCheckbox" type="checkbox" selector="//input[@id='yotpo_widget_settings_mdr_enabled_inherit']"/>

    <element name="OrdersSyncFromDate" type="text" selector="//input[@id='yotpo_sync_settings_orders_sync_start_date']"/>
    <element name="OrdersSyncLimit" type="text" selector="//input[@id='yotpo_sync_settings_orders_sync_limit']"/>
    <element name="OrdersSyncStatuses" type="select" selector="//select[@id='yotpo_sync_settings_custom_order_status']"/>
    <element name="OrderSyncFromDateCheckbox" type="checkbox" selector="//input[@id='yotpo_sync_settings_orders_sync_start_date_inherit']"/>
    <element name="OrdersSyncLimitCheckbox" type="checkbox" selector="//input[@id='yotpo_sync_settings_orders_sync_limit_inherit']"/>
    <element name="OrderSyncCustomStatusesCheckbox" type="checkbox" selector="//input[@id='yotpo_sync_settings_custom_order_status_inherit']"/>

    <element name="StarRatingProductPage" type="select" selector="//select[@id='yotpo_widget_settings_bottomline_enabled']"/>
    <element name="StarRatingProductPageCheckBox" type="checkbox" selector="//input[@id='yotpo_widget_settings_bottomline_enabled_inherit']"/>

    <element name="EnableQandA" type="select" selector="//select[@id='yotpo_widget_settings_qna_enabled']"/>
    <element name="EnableQandACheckBox" type="checkbox" selector="//input[@id='yotpo_widget_settings_qna_enabled_inherit']"/>

    <element name="SaveConfiguration" type="button" selector="//span[text()='Save Config']"/>
    <element name="SavedConfiguration" type="button" selector="//div[text()='You saved the configuration.']" timeout="30"/>
    <element name="ReviewsAndVisualMarketing" type="button" selector="//a[contains(@class, 'item-nav')]//span[text()='Reviews and Visual Marketing']" timeout="30"/>
    <element name="YotpoSettings" type="button" selector="a.yotpo-settings" timeout="30"/>

  </section>
</sections>
