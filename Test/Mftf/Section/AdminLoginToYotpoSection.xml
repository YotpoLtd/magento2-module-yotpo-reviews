<sections xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
          xsi:noNamespaceSchemaLocation="urn:magento:mftf:Page/etc/SectionObject.xsd">
  <section name="AdminLoginToYotpo">
    <element name="YotpoIconInMenu" type="text" selector="#system_config_tabs .yotpo-icon" timeout="30"/>
    <element name="yotpoAppKey" type="text" selector="input#yotpo_settings_app_key" timeout="30"/>
    <element name="yotpoSecret" type="text" selector="input#yotpo_settings_secret" timeout="30"/>

    <element name="GeneralMenu" type="button" selector="#system_config_tabs > div:nth-child(1) > div" timeout="30"/>
    <element name="YotpoMenu" type="button" selector="#system_config_tabs > div:nth-child(6) > div" timeout="30"/>
    <element name="WidgetSettings" type="button" selector="//a[@id='yotpo_widget_settings-head']" timeout="30"/>
    <element name="YotpoEnabled" type="select" selector="//select[@id='yotpo_settings_active']" timeout="30"/>
    <element name="WidgetEnabled" type="select" selector="//select[@id='yotpo_widget_settings_widget_enabled']" timeout="30"/>
    <element name="WidgetEnabledCheckBox" type="checkbox" selector="//input[@id='yotpo_widget_settings_widget_enabled_inherit']" timeout="30"/>

    <element name="StarRatingProductPage" type="select" selector="//select[@id='yotpo_widget_settings_bottomline_enabled']" timeout="30"/>
    <element name="StarRatingProductPageCheckBox" type="checkbox" selector="//input[@id='yotpo_widget_settings_bottomline_enabled_inherit']" timeout="30"/>

    <element name="EnableQandA" type="select" selector="//select[@id='yotpo_widget_settings_qna_enabled']" timeout="30"/>

    <element name="SaveConfiguration" type="button" selector="//span[text()='Save Config']" timeout="30"/>
    <element name="SavedConfiguration" type="button" selector="//div[text()='You saved the configuration.']" timeout="30"/>
    <element name="ReviewsAndVisualMarketing" type="button" selector="//a[contains(@class, 'item-nav')]//span[text()='Reviews and Visual Marketing']" timeout="30"/>
  </section>
</sections>